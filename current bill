import java.util.Scanner;
public class sample{
    public static void main(String[]args){
      Scanner  scan=new Scanner(System.in);
      System.out.println("enter the power bill units");
      int units=scan.nextInt();
      
      int amount=0;
      switch(units/100){
      
         case 1:
              amount=units*2;
              break;
              case 2:
                  amount=units*4;
                  break;
            case 3:
                   amount=units*6;
                   break;
                   
        default:
               System.out.println("invalid print");
      }
      System.out.println("total electricity bill=rupes"+amount);
      }d
    }
