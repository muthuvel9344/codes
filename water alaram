import java.util.Scanner;
public class sample{
    public static void main(String[]args){
      Scanner  scan=new Scanner(System.in);
      System.out.println("enter the WaterLevel(Tank ful,Tank empty)");
      
      
     String  WaterLevel =scan.next();
      
     
      switch(WaterLevel){
          case "0":
              
              
                System.out.println("alaram sound start");
              break;
      
         case "1":
             
             
                System.out.println("alaram sound is off");
              break;
              
                   
        default:
               System.out.println("invalant water");
      }
    
      }
    }
    
