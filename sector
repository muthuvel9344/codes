import java.util.Scanner; 

public class SectorAreaCalculator {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in); 

    
        System.out.print("Enter the radius of the circle: ");
        double radius = input.nextDouble(); 

        
        System.out.print("Enter the central angle in radians: ");
        double angleInRadians = input.nextDouble(); 

        
        double area = 0.5 * Math.pow(radius, 2) * angleInRadians;
        System.out.println("The area of the sector is: " + area);

        input.close();
    }
}
    
    
    
    
    
